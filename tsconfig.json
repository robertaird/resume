{
  "compilerOptions": {
    // "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    // "skipLibCheck": true,
    // "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "imports": ["deps/import.ts"],
      "react": ["deps/react.ts"],
      "muiCore": ["deps/mui.ts"]
    },
    "composite": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
